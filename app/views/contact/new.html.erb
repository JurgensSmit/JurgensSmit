    <!-- Page Title -->
    <div class="page-title">
        <i class="icon-envelope-alt page-title-icon"></i>
        <h2>Contact me</h2>
    </div>
        <!-- Contact Us -->
        <div class="contact-us container">
            <div class="row">
                <div class="contact-form span5">
                    <%= form_for @message, :url => contact_path do |form| %>
                <fieldset class="fields">
                        <div class="field">
                            <%= form.label :name %>
                            <%= form.text_field :name, :placeholder => "Enter your name...", :autofocus => true %>
                        </div>
                        <div class="field">
                            <%= form.label :email %>
                            <%= form.text_field :email, :placeholder => "Enter your email..." %>
                        </div>
                        <div class="field">
                            <%= form.label :subject %>
                            <%= form.text_field :subject, :placeholder => "Your subject..." %>
                        </div>
                        <div class="field">
                            <%= form.label :Message %>
                            <%= form.text_area :body, :placeholder => "Your message..." %>
                        </div>
                    </fieldset>
                    <fieldset class="actions">
                    <%= form.submit "Send" %>
                    </fieldset>
                    <% end %>
                    </div>
                <div class="contact-address span2">
                    <h4>I am here</h4>
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d403200.04142967984!2d145.07961605!3d-37.860282850000004!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x6ad646b5d2ba4df7%3A0x4045675218ccd90!2sMelbourne+VIC!5e0!3m2!1sen!2sau!4v1388492431962" width="500" height="450" frameborder="0" style="border:0"></iframe>
                </div>
            </div>
        </div>